---
kind: Ingress
apiVersion: networking.k8s.io/v1
metadata:
  name: crs-webapp
  namespace: crs-webservice
  annotations:
    tailscale.com/hostname: "${CRS_API_HOSTNAME}"
    tailscale.com/experimental-forward-cluster-traffic-via-ingress: "true"
spec:
  ingressClassName: tailscale
  tls:
    - hosts:
        - ${CRS_API_HOSTNAME}
  rules:
    - http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: crs-webapp
                port:
                  number: 80
