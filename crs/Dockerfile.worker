FROM golang:1.22-alpine AS builder

WORKDIR /app

# Copy go.mod and go.sum files
COPY go.mod go.sum ./
# Download dependencies
RUN go mod download

# Copy the source code
COPY . .

# Build the application
RUN CGO_ENABLED=0 GOOS=linux go build -o crs-server ./cmd/worker

# Create a minimal production image
FROM docker:dind

# Install necessary tools
RUN apk add --no-cache \
    git \
    curl \
    wget \
    tar \
    gzip \
    unzip \
    python3 \
    py3-pip \
    py3-virtualenv \
    bash \
    jq \
    ca-certificates \
    tzdata \
    build-base \
    openssh-client \
    openjdk17 \
    llvm18 \
    llvm18-dev \
    clang18 \
    clang18-dev


# Create the virtual environment
RUN python3 -m venv /tmp/crs_venv

# Activate the virtual environment and install packages
RUN /bin/bash -c "source /tmp/crs_venv/bin/activate && \
    pip install --no-cache-dir litellm==1.69.0 && \
    pip install --no-cache-dir tiktoken python-dotenv pyyaml openai anthropic && \
    pip install --no-cache-dir google-generativeai && \
    pip install --no-cache-dir clang==18.1.8 && \
    pip install --no-cache-dir openlit"
    
# Make sure the virtual environment is accessible
ENV PATH="/tmp/crs_venv/bin:${PATH}"

# Set working directory
WORKDIR /app

# Copy the binary from the builder stage
COPY --from=builder /app/crs-server .

# Copy the VERSION file from the builder stage
COPY --from=builder /app/VERSION .

# Create necessary directories
RUN mkdir -p /app/tasks /app/logs

# Copy the entrypoint script
COPY entrypoint.sh /app/entrypoint.sh
RUN chmod +x /app/entrypoint.sh
COPY .env /app/.env
COPY ./strategy /app/strategy
RUN chmod -R 755 /app/strategy
# Set environment variables
ENV GIN_MODE=release
ENV CRS_TASK_DIR=/app/tasks
ENV CRS_LOG_DIR=/app/logs

# Expose the port
EXPOSE 9081

# Use the entrypoint script
ENTRYPOINT ["/app/entrypoint.sh"]